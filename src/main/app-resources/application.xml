<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="k-means">
      <streamingExecutable>/application/k-means/run</streamingExecutable>
      <defaultParameters>						
        <parameter id="bands" title="Source bands" abstract="Source bands" maxOccurs="1" scope="runtime" type="LiteralData">B2,B3,B4,B5,B6,B7,B8,B8A,B10,B12</parameter>
        <parameter id="upsampling" title="Upsampling method" abstract="Upsampling method" maxOccurs="1" scope="runtime" type="LiteralData">
          <options>
            <default>Nearest</default>
            <option>Bilinear</option>
            <option>Bicubic</option>
          </options>
        </parameter>
        <parameter id="enddate" title="End date" abstract="End date of the TOI. Used as queryable for the MERIS Level 1 catalogue" scope="runtime" type="opensearch" target="time:end" maxOccurs="1">2012-04-04</parameter>
      </defaultParameters>
      <defaultJobconf>
        <property id="mapred.task.timeout">9900000000000</property>
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
    <workflow id="workflow" title="Simple workflow" abstract="Simple workflow based on the DCS Bash archetype">
    <workflowVersion>1.0</workflowVersion>
    <node id="k-means">
      <job id="template_A"/>
      <sources>
        <source id="source" title="Simple string sources" abstract="List of comma-separated strings" refid="string:list" scope="runtime">input-1,input-2,input-3</source>
      </sources>
    </node>
    <node id="node_B">
      <job id="template_B"/>
      <sources>
        <source refid="wf:node">node_A</source>
      </sources>
    </node>
  </workflow>
</application>
